&lt;form:form name=&quot;loginForm&quot; modelAttribute=&quot;loginForm&quot; method=&quot;post&quot; cssClass=&quot;to-be-validated&quot; action=&quot;${tlibfn:rewrite(flowExecutionUrl, pageContext.request, settings['webapp_path'])}&quot;&gt;
  &lt;input type=&quot;hidden&quot; name=&quot;_flowExecutionKey&quot; value=&quot;${flowExecutionKey}&quot; /&gt;
  
  &lt;div class=&quot;form-input wide tiny-vspace&quot;&gt;
    &lt;input name=&quot;username&quot; id=&quot;username&quot; type=&quot;text&quot;
      tabindex=&quot;1&quot;
      value=&quot;${loginForm.username}&quot;
      placeholder=&quot;Email&quot; 
      required=&quot;true&quot;
      email=&quot;true&quot;
      autocomplete=&quot;on&quot; class=&quot;form-control ${status.error ? 'small error' : ''}&quot; /&gt;
        
    &lt;form:errors path=&quot;username&quot; element=&quot;div&quot; cssClass=&quot;small error&quot; /&gt;
  &lt;/div&gt;

  &lt;div class=&quot;form-input wide tiny-vspace&quot;&gt;
    &lt;input name=&quot;password&quot; id=&quot;password&quot; type=&quot;password&quot;
      tabindex=&quot;2&quot;
        class=&quot;form-control ${status.error ? 'small error' : ''}&quot; 
        required=&quot;true&quot;
        placeholder=&quot;Password&quot;
        autocomplete=&quot;off&quot; /&gt;
    &lt;form:errors path=&quot;password&quot; element=&quot;div&quot; cssClass=&quot;small error&quot; /&gt;
  &lt;/div&gt;
  
   &lt;div class=&quot;row form-button&quot;&gt;
    &lt;button name=&quot;_eventId_submit&quot; type=&quot;submit&quot; class=&quot;btn btn-block green square small-vspace&quot;&gt; 
      &lt;h6 class=&quot;white-text small&quot;&gt;
        LOG IN
      &lt;/h6&gt;
    &lt;/button&gt;
  &lt;/div&gt;
  &lt;div class=&quot;form-text text-center&quot;&gt;
    &lt;span class=&quot;small&quot;&gt;&lt;strong&gt;&lt;a href=&quot;${settings['webapp_path']}/account/settings/password/forgot&quot;&gt;Forgot Password?&lt;/a&gt;&lt;/strong&gt; 
    or &lt;strong&gt;&lt;a href=&quot;${settings['webapp_path']}/account/new&quot; class=&quot;js-direct-to-no&quot;&gt;Sign Up&lt;/a&gt;&lt;/strong&gt;&lt;/span&gt;
  &lt;/div&gt;
&lt;/form:form&gt;
